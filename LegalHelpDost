            padding: "20dp"
            spacing: "20dp"
            size_hint_y: None

            MDLabel:
                text: "Welcome to"
                halign: "center"
                style: "H5"
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                text: "LegalHelpDost"
                halign: "center"
                style: "H3"
                bold: True
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                text: "One Click Legal Assistance"
